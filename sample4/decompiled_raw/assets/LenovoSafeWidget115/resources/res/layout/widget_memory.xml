    </LinearLayout>
    <Button android:textSize="16sp" android:textColor="#006500" android:ellipsize="start" android:id="@+id/clearBtn" android:background="@drawable/mem4x1_clean" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginTop="9dp" android:minWidth="80dp" android:text="@string/mem_clear" android:singleLine="true" android:layout_toRightOf="@+id/apps" android:layout_below="@+id/refreshBtn"/>
    <TextView android:textSize="8dp" android:textColor="#454545" android:id="@+id/progressbar_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/apps" android:layout_alignLeft="@+id/apps"/>
    <TextView android:textSize="8dp" android:textColor="#454545" android:id="@+id/progressbar_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/apps" android:layout_alignRight="@+id/apps"/>
