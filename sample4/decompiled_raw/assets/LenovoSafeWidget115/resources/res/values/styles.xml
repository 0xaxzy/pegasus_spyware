<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyTheme_TableText" parent="@style/MyTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/local_white</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="DialogText">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="NegativeButtonText">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@drawable/home_page_button_healthcheckup_color_selector</item>
        <item name="android:gravity">0x11</item>
        <item name="android:background">@drawable/signbtn_bg</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="ButtonText">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@drawable/home_page_button_healthcheckup_color_selector</item>
        <item name="android:gravity">0x11</item>
        <item name="android:background">@drawable/home_page_button_healthcheckup_selector</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
