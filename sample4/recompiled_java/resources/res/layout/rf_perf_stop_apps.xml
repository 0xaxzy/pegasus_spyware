<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/gray6" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/title"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="24dp">
        <TextView android:textSize="13dp" android:textColor="#ff878787" android:gravity="left" android:id="@+id/task_manager_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/phone_acc_getting_data"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/linear_empty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="15dp" android:textColor="#ff878787" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/text_process_empty"/>
    </LinearLayout>
    <ListView android:id="@+id/ignoreList" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btnLayout" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <Button android:textColor="@color/heise" android:id="@+id/one_key_delete" android:background="@drawable/signbtn_bg" android:layout_width="125dp" android:layout_height="43dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:maxWidth="277dp" android:text="@string/kill_process_one_key" android:layout_weight="1"/>
    </LinearLayout>
    <ListView android:id="@android:id/list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
