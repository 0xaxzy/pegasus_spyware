<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:paddingLeft="9dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="60dp">
    <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/app_icon" android:layout_width="36dp" android:layout_height="36dp"/>
    <LinearLayout android:layout_gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_weight="1">
        <TextView android:textSize="16sp" android:textColor="@color/dark" android:ellipsize="end" android:id="@+id/app_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/dark" android:ellipsize="end" android:id="@+id/notification_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/notification_perm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginRight="9dp"/>
    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/notificaiton_perm_expand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/arrow_down"/>
</LinearLayout>
