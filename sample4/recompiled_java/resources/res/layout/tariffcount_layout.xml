<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:background="@drawable/back_black" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:background="@drawable/back_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginTop="4dp" android:layout_marginRight="7dp" android:layout_marginBottom="4dp">
        <LinearLayout android:orientation="vertical" android:paddingLeft="11dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_centerVertical="true">
            <TextView android:textSize="18dp" android:textColor="@color/black1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/month_tariff" android:singleLine="true"/>
            <TextView android:textSize="14dp" android:textColor="@color/gray1" android:id="@+id/this_traffic_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="8dp" android:singleLine="true" android:drawableLeft="@drawable/traffic_icon" android:drawablePadding="6dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/gray1" android:id="@+id/this_month_use_send_sms_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="6dp" android:singleLine="true" android:drawableLeft="@drawable/sms" android:drawablePadding="6dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/gray1" android:id="@+id/this_month_use_call_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="6dp" android:layout_marginBottom="2dp" android:singleLine="true" android:drawableLeft="@drawable/call_incomming" android:drawablePadding="6dp"/>
        </LinearLayout>
        <RelativeLayout android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="-8dp" android:layout_marginRight="4dp">
            <LinearLayout android:gravity="bottom" android:id="@+id/this_month_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textSize="60dp" android:textColor="@color/black2" android:id="@+id/this_month" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="22dp" android:textColor="@color/black2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-4dp" android:text="@string/month" android:layout_toRightOf="@+id/this_month"/>
            </LinearLayout>
            <TextView android:textSize="16dp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/btn_to_warn_set" android:background="@drawable/kill_btn" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginTop="-6dp" android:layout_marginBottom="2dp" android:text="@string/warn_set" android:layout_below="@+id/this_month_layout" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
