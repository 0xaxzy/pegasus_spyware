<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/LeemWidget.ListStyle.LinearLayout">
    <ImageView android:id="@+id/icon" style="@style/LeemWidget.ListItem.Image"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/LeemWidget.ListItem.RelativeLayout">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:ellipsize="marquee" android:id="@android:id/title" android:fadingEdge="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </RelativeLayout>
    <CheckBox android:id="@+id/checkboxWidget" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:button="@drawable/checkbox_selector" android:layout_alignParentRight="true"/>
</LinearLayout>
