<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:id="@+id/allow" android:background="@drawable/btn_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/grant_img" android:background="@drawable/perm_grant" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/allow"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/tip" android:background="@drawable/btn_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/prompt_img" android:background="@drawable/perm_prompt" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/antispamnotice"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/deny" android:background="@drawable/btn_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/deny_img" android:background="@drawable/perm_deny" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/forbid"/>
    </LinearLayout>
</LinearLayout>
