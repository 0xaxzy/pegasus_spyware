<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff3385ff" android:endColor="#ff3385ff" android:centerX="0.8" android:centerY="0.8" android:centerColor="#ff41e8d7"/>
            <stroke android:width="2dp" android:color="#ffffffff"/>
            <corners android:radius="5dp"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffeac100" android:endColor="#ffc9aaf6"/>
            <stroke android:width="2dp" android:color="#ffffff33"/>
            <corners android:radius="8dp"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <gradient android:startColor="#ff9dc2fa" android:endColor="#ff9dc2fa" android:angle="0" android:type="linear" android:centerX="0.5" android:centerY="0.5" android:centerColor="#ff9dfae7"/>
            <stroke android:width="1dp" android:color="#ff8533ff" android:dashWidth="1dp"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</selector>
