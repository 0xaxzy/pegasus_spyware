<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/mem4x1_background" android:layout_width="wrap_content" android:layout_height="95dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/mem_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_alignParentTop="true">
        <ImageView android:id="@+id/mem_safecenter" android:background="@drawable/icon" android:layout_width="55dp" android:layout_height="55dp"/>
        <TextView android:textSize="15dp" android:textColor="#ff454545" android:layout_width="55dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:text="@string/safecenter"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/apps" android:background="@drawable/mem4x1_app_background" android:layout_width="154dp" android:layout_height="58dp" android:layout_marginTop="6dp" android:layout_toRightOf="@+id/mem_icon" android:layout_alignParentTop="true">
        <TextView android:textSize="12dp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/apps_text" android:background="@drawable/mem4x1_app_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/toast_mem_no"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="1dp">
            <ImageView android:id="@+id/image00" android:layout_width="26dp" android:layout_height="26dp"/>
            <ImageView android:id="@+id/image01" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image02" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image03" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image04" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="2dp">
            <ImageView android:id="@+id/image05" android:layout_width="26dp" android:layout_height="26dp"/>
            <ImageView android:id="@+id/image06" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image07" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image08" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
            <ImageView android:id="@+id/image09" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/clearBtn" android:background="@drawable/mem4x1_clean" android:layout_width="95dp" android:layout_height="37dp" android:layout_marginLeft="13dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="@string/mem_clear" android:layout_toRightOf="@+id/apps" android:layout_below="@+id/progressbar" android:layout_alignTop="@+id/apps" android:layout_alignParentTop="true"/>
    <LinearLayout android:gravity="center" android:id="@+id/refreshBtn" android:background="@drawable/mem4x1_refresh" android:layout_width="62dp" android:layout_height="30dp" android:layout_marginLeft="18dp" android:layout_marginTop="9dp" android:layout_toRightOf="@+id/apps" android:layout_below="@+id/clearBtn">
        <TextView android:textSize="18dp" android:textColor="#ff000000" android:gravity="center" android:layout_width="wrap_content" android:layout_height="22dp" android:text="@string/mem_refresh"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progressbar" android:layout_width="136dp" android:layout_height="7dp" android:layout_marginTop="10dp" android:progressDrawable="@drawable/mem4x1_progress_bg" android:layout_below="@+id/apps" android:layout_alignLeft="@+id/apps" style="?android:attr/progressBarStyleHorizontal"/>
    <TextView android:textSize="8dp" android:textColor="#ff454545" android:id="@+id/progressbar_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_toRightOf="@+id/progressbar" android:layout_below="@+id/apps" android:layout_alignTop="@+id/progressbar"/>
    <TextView android:textSize="8dp" android:textColor="#ff454545" android:id="@+id/progressbar_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/progressbar" android:layout_alignLeft="@+id/progressbar"/>
</RelativeLayout>
