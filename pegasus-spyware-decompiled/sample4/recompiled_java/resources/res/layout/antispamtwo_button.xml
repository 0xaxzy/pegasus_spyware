<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="43px" android:layout_weight="2"/>
        <Button android:id="@+id/antispamall_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px" android:layout_marginBottom="7px" android:text="@string/antispamall_select" android:layout_weight="3"/>
        <TextView android:layout_width="wrap_content" android:layout_height="43px" android:layout_weight="2"/>
        <Button android:id="@+id/antispamcancel_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px" android:layout_marginBottom="7px" android:text="@string/antispamcancel_select" android:layout_weight="3"/>
        <TextView android:layout_width="wrap_content" android:layout_height="43px" android:layout_weight="2"/>
    </LinearLayout>
    <View android:id="@+id/antispamdivider" android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
