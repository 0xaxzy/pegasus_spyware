<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/input_title_layout" android:background="@drawable/dialog_title_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="20dp" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/input_pwd" android:shadowColor="#ff000000" android:shadowDx="1" android:shadowDy="0" android:shadowRadius="1" android:layout_centerInParent="true"/>
        <ProgressBar android:id="@+id/input_noti_progress" android:visibility="invisible" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/input_title_divider" android:background="@android:drawable/divider_horizontal_dark" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/input_password_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textColor="#ff454545" android:id="@+id/txt_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="4dp" android:layout_marginRight="12dp"/>
        <EditText android:id="@+id/edt_input_pwd" android:background="@android:drawable/edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="4dp" android:layout_marginRight="12dp" android:layout_marginBottom="10dp" android:password="true" android:maxLength="6" android:phoneNumber="true"/>
        <LinearLayout android:id="@+id/splitline" android:background="@drawable/home_page_drawer_splitline_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/input_bottom_layout" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/input_pwd_cancel" android:background="@drawable/signbtn_bg" android:visibility="gone" android:layout_width="0dp" android:layout_height="36dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:text="@string/cancel" android:layout_weight="1" style="@style/ButtonText"/>
            <TextView android:gravity="center" android:id="@+id/input_pwd_ok" android:background="@drawable/home_page_button_healthcheckup_selector" android:visibility="gone" android:layout_width="0dp" android:layout_height="36dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:text="@string/ok" android:layout_weight="1" style="@style/ButtonText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
