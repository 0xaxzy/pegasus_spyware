<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/net_sim1_notice" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/net_card1" android:layout_centerVertical="true"/>
        <CheckBox android:id="@+id/net_card1_notice_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@drawable/net_line" android:layout_width="match_parent" android:layout_height="1dp"/>
    <RelativeLayout android:id="@+id/net_sim2_notice" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/net_card2" android:layout_centerVertical="true"/>
        <CheckBox android:id="@+id/net_card2_notice_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
