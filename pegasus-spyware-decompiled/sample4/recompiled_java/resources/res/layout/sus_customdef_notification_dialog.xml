<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:background="@drawable/dialog_title_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">
        <TextView android:textSize="20dp" android:textColor="#ffffffff" android:gravity="center_horizontal" android:id="@+id/SUS_NOTIFICATION_PROMPTINFO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="@string/SUS_NOTIFICATION_UPDATINGPROMPT" android:singleLine="true" android:shadowColor="#ff000000" android:shadowDx="1" android:shadowDy="0" android:shadowRadius="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/dialog_center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16dp" android:gravity="center_horizontal" android:id="@+id/SUS_NOTIFICATION_AUTOHIDPROMPTINFOTEXTVIEW_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SUS_NOTIFICATION_AUTOHIDPROMPTINFO_1" android:shadowColor="#ffffffff" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" style="@style/DialogText"/>
            <TextView android:textSize="16dp" android:gravity="center_horizontal" android:id="@+id/SUS_NOTIFICATION_AUTOHIDPROMPTINFOTEXTVIEW_TIME" android:layout_width="24dp" android:layout_height="wrap_content" android:shadowColor="#ffffffff" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" style="@style/DialogText"/>
            <TextView android:textSize="16dp" android:gravity="center_horizontal" android:id="@+id/SUS_NOTIFICATION_AUTOHIDPROMPTINFOTEXTVIEW_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SUS_NOTIFICATION_AUTOHIDPROMPTINFO_2" android:shadowColor="#ffffffff" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" style="@style/DialogText"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/splitline" android:background="@drawable/dialog_line" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="58dp">
            <LinearLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <Button android:textSize="19dp" android:textColor="@drawable/home_page_button_healthcheckup_color_selector" android:id="@+id/SUS_NOTIFICATION_CONTINUEBUTTON" android:background="@drawable/home_page_button_healthcheckup_selector" android:layout_width="0dp" android:layout_height="36dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="@string/SUS_NOTIFICATION_HIDE_BUTTONTEXT" android:shadowColor="#ffffffff" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" android:layout_weight="1"/>
                <Button android:textSize="19dp" android:id="@+id/SUS_NOTIFICATION_ABORTUPDATEBUTTON" android:background="@drawable/signbtn_bg" android:layout_width="0dp" android:layout_height="36dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="@string/SUS_NOTIFICATION_ABORTUPDATE_BUTTONTEXT" android:shadowColor="#ffffffff" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
