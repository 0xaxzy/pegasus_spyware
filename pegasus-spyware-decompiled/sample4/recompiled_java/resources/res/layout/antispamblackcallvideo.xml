<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/antispamvideoblack_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/antispamvideolin" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/antispamvideoblack_image">
            <TextView android:textSize="22dp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/antispamvideolocalblack_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="22dp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/antispamvideolocalblack_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/antispamvideoblack_image" android:layout_below="@+id/antispamvideolin">
            <TextView android:textSize="14dp" android:ellipsize="end" android:id="@+id/antispamvideolocalblack_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView android:id="@+id/antispamvideoisupload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/antispamupload_net" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
