<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:background="@drawable/notify_bg" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/main_notify_logo" android:layout_width="wrap_content" android:layout_height="48dp" android:src="@drawable/leem_icon" android:layout_alignParentLeft="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/leem_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/main_notify_logo">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#ff181818" android:layout_gravity="bottom" android:id="@+id/leem_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="#ff181818" android:layout_gravity="bottom" android:id="@+id/leem_power_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <TextView android:textColor="#ff181818" android:layout_gravity="bottom" android:id="@+id/leem_power_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/leem_img_tag" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="1dp" android:layout_toRightOf="@+id/main_notify_logo" android:layout_below="@+id/leem_top"/>
    <LinearLayout android:id="@+id/leem_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/main_notify_logo" android:layout_below="@+id/leem_img_tag">
        <TextView android:textColor="#ff181818" android:layout_gravity="bottom" android:id="@+id/leem_log" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
