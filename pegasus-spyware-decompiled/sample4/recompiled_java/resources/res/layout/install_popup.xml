<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center" android:id="@+id/rel_title" android:background="@drawable/popup_title_bg" android:layout_width="match_parent" android:layout_height="56dp">
        <TextView android:textSize="20dp" android:textColor="@color/white2" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notify" android:singleLine="true" android:shadowColor="#ff000000" android:shadowDx="1" android:shadowDy="0" android:shadowRadius="1" android:layout_toRightOf="@+id/icon"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/popup_content_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16dp" android:textColor="#ff000000" android:id="@+id/content1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
            <ImageView android:id="@+id/img_checkbox" android:background="@drawable/checkbox_check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="16dp" android:textColor="#ff888888" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_tip" android:layout_toLeftOf="@+id/img_checkbox" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/button" android:background="@drawable/popup_bottom_bg" android:layout_width="match_parent" android:layout_height="58dp">
        <TextView android:id="@+id/neutralButton" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:text="@string/known" style="@style/ButtonText"/>
    </LinearLayout>
</LinearLayout>
