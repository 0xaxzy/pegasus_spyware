<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="300dp" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/net_correct_sim_info_title" android:background="@drawable/setting_list_bg_selector" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="15dp" android:id="@+id/net_correct_sim_info_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_centerVertical="true"/>
        <ImageView android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow1" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp">
        <TextView android:textSize="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/net_correct_sms_to"/>
        <EditText android:id="@+id/net_correct_sms_number" android:background="@android:drawable/edit_text" android:paddingLeft="6dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:numeric="decimal" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/net_card_flag" android:paddingLeft="10dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp">
        <TextView android:textSize="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/net_correct_sms_content"/>
        <EditText android:id="@+id/net_correct_sms_content" android:background="@android:drawable/edit_text" android:paddingLeft="6dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="6" android:numeric="decimal" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textSize="19dp" android:textColor="@drawable/home_page_button_healthcheckup_color_selector" android:gravity="center" android:id="@+id/net_query_correct_text" android:background="@drawable/signbtn_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginLeft="30dp" android:layout_marginTop="8dp" android:layout_marginRight="15dp" android:layout_marginBottom="5dp" android:text="@string/net_correct_update_config"/>
</LinearLayout>
