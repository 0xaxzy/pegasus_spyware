<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_gravity="center" android:id="@+id/switch_screem" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_fw_more_rotation_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/assist_float_windows_more"/>
        </FrameLayout>
        <com.lenovo.safecenter.floatwindow.view.ClearProcessBar android:id="@+id/cpb_memory_usage" android:paddingTop="2dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginRight="11dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingLeft="11dp" android:paddingRight="30dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textColor="@color/text" android:id="@+id/process_usage_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/process_usage_size"/>
            <TextView android:textColor="@color/text" android:id="@+id/process_usage_rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/process_usage_rate"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:textSize="20sp" android:textColor="@drawable/assist_selector_clear_btn_text" android:layout_gravity="right" android:id="@+id/clear_all" android:background="@drawable/assist_selector_clear_btn" android:layout_width="110dp" android:layout_height="36dp" android:layout_marginTop="2dp" android:layout_marginRight="11dp" android:text="@string/process_clear_all"/>
            <TextView android:textSize="18sp" android:textColor="@color/text_switcher_item_on" android:gravity="right" android:id="@+id/process_clear_info" android:paddingRight="11dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
