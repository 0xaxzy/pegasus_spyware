<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="?android:attr/listPreferredItemHeight">
    <TextView android:textSize="18dp" android:textColor="@drawable/home_page_button_healthcheckup_color_selector" android:gravity="center" android:id="@+id/antivirusshowdesc" android:background="@drawable/home_page_button_healthcheckup_selector" android:layout_width="70dp" android:layout_height="36dp" android:text="@string/antivirusalready_delete" android:shadowColor="#ffe5ffbc" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/del_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/alreadydel" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/antiviruslayout_lin1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/antivirusshowdesc">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/antiviruslayout_lin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10px">
            <ImageView android:id="@+id/antiviruspkg_icon" android:layout_width="25dp" android:layout_height="25dp"/>
            <TextView android:id="@+id/antivirusappname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10px" android:layout_toRightOf="@+id/antiviruspkg_icon" android:layout_centerVertical="true"/>
            <TextView android:textColor="@color/red" android:id="@+id/antivirusvirusadvice" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="60px" android:text="@string/antivirusvirus_advice" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/antivirusviruscheckbox" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30px" android:src="@drawable/antivirusappinfo" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/antivirusdeletebox" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10px" android:src="@drawable/antivirusdelete" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:ellipsize="end" android:id="@+id/antivirusvirusname" android:paddingLeft="5px" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/antiviruslayout_lin"/>
    </RelativeLayout>
</RelativeLayout>
