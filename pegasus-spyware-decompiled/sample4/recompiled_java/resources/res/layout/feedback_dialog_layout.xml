<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20dp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/feedback_content"/>
    <EditText android:textSize="18dp" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/feedback_content_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:hint="@string/feedback_msg" android:maxLines="5" android:minLines="5" android:imeOptions="actionNext"/>
    <TextView android:textSize="20dp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/feedback_mail"/>
    <EditText android:textSize="18dp" android:id="@+id/feedback_mail_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:hint="@string/feedback_mail_msg" android:maxLines="1" android:inputType="textEmailAddress" android:imeOptions="actionDone"/>
</LinearLayout>
