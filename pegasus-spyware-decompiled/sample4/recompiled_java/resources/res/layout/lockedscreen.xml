<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="22dp" android:textColor="@color/black1" android:id="@+id/textView1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="135dp" android:text="@string/safeing" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
